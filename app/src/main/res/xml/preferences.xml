<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="pref_email_checkbox"
        android:title="@string/email_checkbox_title"
        android:summary="@string/email_checkbox_summary"
        android:defaultValue="false"/>
    <EditTextPreference
        android:dependency="pref_email_checkbox"
        android:key="pref_email_edittext"
        android:title="@string/pref_email_edittext_title"
        android:summary="No current Email address"
        android:hint="@string/pref_edittext_hint"
        android:defaultValue="@string/email_hint_sign_up"/>

</PreferenceScreen>